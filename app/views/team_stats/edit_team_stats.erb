<h1>Edit <%=@team_stat.team_name%></h1>

<form action="/team_stats/<%=@team_stat.id%>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label>Team Name:</label>
  <input type="text" name="team_name" value="<%=@team_stat.team_name%>"><br>
  <label>Points:</label>
  <input type="number" name="points" value="<%=@team_stat.points%>"><br>
  <label>Goals Scored:</label>
  <input type="number" name="goals_scored" value="<%=@team_stat.goals_scored%>"><br>
  <input type="submit" value="Edit Team">
</form>